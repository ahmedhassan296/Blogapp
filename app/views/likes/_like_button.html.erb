<% if @like = current_user.likes.find_by(likeable: post) %>
  <%= link_to 'Unlike', post_like_path(post_id: @post.id, id: @like.id), data: { turbo_method: :delete, turbo: true } %>
<% else %>
  <%= link_to 'Like', post_likes_path(post), id: 'like_button', class: 'btn btn-primary',data: { turbo_method: :post, turbo: true } %>
<% end %>
