<h2 class="text-center mt-0">Create a New Post</h2>

<div class="d-flex justify-content-center mt-5">
  <div class="card p-4 shadow" style="width: 40rem;">
    <div class="card-body">
      <%= form_with(model: post, local: true, class: "needs-validation") do |form| %>
        <% if post.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>
            <ul>
              <% post.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter the title" %>
        </div>

        <div class="mb-3">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_field :description, class: "form-control", placeholder: "Enter the description" %>
        </div>

        <div class="mb-3">
          <%= form.label :image, class: "form-label" %>
          <%= form.file_field :image, class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= form.submit "Create Post", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  /* Custom styling if needed */
  .custom-card-position {
    margin-top: 20px; /* Adjust this value as needed */
  }
</style>
