<div class="container mt-4">
  <h1 class="text-center mb-4">Posts</h1>

  <div class="text-center mb-4">
    <%= link_to "New Post", new_post_path, class: "btn btn-dark" %>
  </div>

  <div id="posts" class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <%= render post %>
            <p class="mt-3">
              <%= link_to "Show this post", post_path(post), class: "btn btn-outline-primary" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
