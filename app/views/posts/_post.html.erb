<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

<p>
  <strong>Status:</strong>
  <%= post.status.present? ? post.status.capitalize : "Pending" %>
</p>


  <%= image_tag(post.image) if post.image.attached? %>
</div>
