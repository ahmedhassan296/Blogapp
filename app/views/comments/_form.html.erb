<%= form_with(model: [post, (reply_to || Comment.new)], local: true) do |form| %>
  
   <%= form.hidden_field :parent_id, value: reply_to&.id %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 3, class: 'form-control', placeholder: 'Please comment here' %>
  </div>

  <div class="form-group">
    <%= form.label :images, "Attach Images" %>
    <%= form.file_field :images, multiple: true, direct_upload: true, class: 'form-control' %>
  </div>

  <%# Hidden field to store the parent_id if replying to a comment %>
  <%= form.hidden_field :parent_id, value: reply_to.id if reply_to %>

  <%= form.submit 'Submit', class: 'btn btn-dark' %>
<% end %>
