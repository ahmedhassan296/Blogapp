<!-- app/views/moderators/posts/index.html.erb -->
<h1>Moderate Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.status %></td>
        <td>
          <% if post.status != 'approved' %>
            <%= link_to 'Approve', approve_moderators_post_path(post),  data: { turbo_method: "post",turbo_confirm: 'Are you sure you want to approve this post?' } %> |
          <% end %>
          
          <%= link_to 'Delete', delete_reported_moderators_post_path(post),  data: { turbo_method: :delete,confirm: 'Are you sure you want to delete this post?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
