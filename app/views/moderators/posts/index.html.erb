<!-- app/views/moderators/posts/index.html.erb -->
<div class="container my-5">
  <h1 class="text-center mb-4">Moderate Posts</h1>

  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead class="thead-dark text-center">
        <tr>
          <th>Title</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td class="text-center"><%= post.status.capitalize %></td>
            <td class="text-center">
              <% if post.status != 'approved' %>
                <%= link_to 'Approve', approve_moderators_post_path(post), class: 'btn btn-success btn-sm mx-1', data: { turbo_method: "post", turbo_confirm: 'Are you sure you want to approve this post?' } %>
              <% end %>
              
              <%= link_to 'Delete', delete_reported_moderators_post_path(post), class: 'btn btn-danger btn-sm mx-1', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this post?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
