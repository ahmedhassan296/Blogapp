
<%= form_with model: [reportable, Report.new], url: post_post_reports_path(reportable), local: true do |form| %>
  <div class="field">
    <%= form.label :reason %>
    <%= form.text_area :reason, rows: 3, placeholder: 'Please report here' %>
  </div>
  <div class="actions">
    <%= form.submit 'Report' %>
  </div>
<% end %>
